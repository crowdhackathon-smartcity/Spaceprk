<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mapdatalayout"
    android:layout_width="360dp"
    android:layout_height="165dp"
    android:orientation="vertical"
    android:background="@drawable/layout_corners_map">


    <ImageView
        android:id="@+id/car_image"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="35dp"
        app:srcCompat="@drawable/car_pic"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/current_position" />

    <TextView
        android:id="@+id/destinationmarker"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_above="@+id/time_to_destination"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_toEndOf="@+id/car_image"
        android:gravity="center_vertical"
        android:text="Χαριλάου Τρικούπη 114"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/time_to_destination"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="30dp"
        android:layout_toEndOf="@+id/car_image"
        android:gravity="center_vertical"
        android:text="1 min left"
        android:textColor="#c5000000"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_above="@+id/chargingtx"
        />

    <TextView
        android:id="@+id/chargingtx"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/car_image"
        android:gravity="center"
        android:text="FREE"
        android:textSize="16sp"
        android:background="@drawable/textview_normal"
        />

    <TextView
        android:id="@+id/pricetx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/chargingtx"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/chargingtx"
        android:layout_toEndOf="@+id/chargingtx"
        android:gravity="center"
        android:text="0€"
        android:textSize="16sp"
        android:background="@drawable/textview_normal_right"
        />

    <ImageView
        android:id="@+id/adresses_spot"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/chargingtx"

        android:layout_marginTop="15dp"
        android:adjustViewBounds="false"
        app:srcCompat="@drawable/point_bar" />

    <TextView
        android:id="@+id/current_position"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/chargingtx"
        android:layout_toEndOf="@+id/adresses_spot"
        android:gravity="center_vertical"
        android:background="@drawable/textview_noborder"
        android:layout_marginLeft="5dp"

        android:text="Χαριλαου Τρικουπηή 114"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/destination_position"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/current_position"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/adresses_spot"
        android:background="@drawable/textview_noborder"
        android:gravity="center_vertical"

        android:text="Τσιμισκη 54"
        android:textSize="20sp" />

</RelativeLayout>